@model Product

<h1 class="nav-link">Update Product</h1>

<hr />
<div class="row">
    <div class="col-md-15">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">                		    
                    <label asp-for="Name" class="col-sm-2 control-label">BookTitle:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span> 	                
		        </div>                
                </div>
            
            <div class="form-group">                		    
                    <label asp-for="Quantity" class="col-sm-2 control-label">Quantity:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Quantity" class="form-control" aria-required="true" />
                    <span asp-validation-for="Quantity" class="text-danger"></span> 	                
		        </div>                
                </div>

            <div class="form-group">                		    
                    <label asp-for="Description" class="col-sm-2 control-label">Description:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Description" class="form-control" aria-required="true" />
                    <span asp-validation-for="Description" class="text-danger"></span> 	                
		        </div>                
                </div>

            <div class="form-group">                		    
                    <label asp-for="Price" class="col-sm-2 control-label">Price:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Price" class="form-control" aria-required="true" />
                    <span asp-validation-for="Price" class="text-danger"></span> 	                
		        </div>                
                </div>

            <div class="form-group">                		    
                    <label asp-for="Cat_Id" class="col-sm-2 control-label">Category:  </label>                     
                    <div class="col-sm-10">	
                    <select asp-for="Cat_Id" class ="form-control" asp-items="ViewBag.Cat_Id" aria-required="true"></select>                                    
		        </div>                
                </div>

            <div class="form-group">                		    
                    <label asp-for="FileImage" class="col-sm-2 control-label">FileImage:  </label>                     
                    <div class="col-sm-10">	
                    <input asp-for="FileImage" class ="form-control" aria-required="true">                                 
		        </div>                
                </div>

            <div class="form-group">
                <input type="submit" value="Update" class="w-50 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
