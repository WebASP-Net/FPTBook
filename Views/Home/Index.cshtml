@model IEnumerable<FPTBook.Models.Product>
@foreach (var product in Model)
        {

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
           src="~/Uploads/@product.ProductImage" width="310" height="500"></div>
                <div class="col-md-6 mt-1">
                    <h5>Book title: @product.Name</h5>
                    <p class="text-justify text-truncate para mb-0">Description: @product.Description<br><br></p>
                </div>
                <div class="align-products-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-products-center">
                        <h4 class="mr-1">Price: @product.Price</h4>
                    </div>                 
                    <div class="d-flex flex-column mt-4"><button class="btn btn-primary btn-sm" type="button">Order</button></div>
                    <div class="d-flex flex-column mt-4">    
                        <a asp-route="addcart" 
                        asp-route-productid="@product.ProductId"
                   class="btn btn-primary btn-sm">Add Cart</a>
                    </div>
                </div>
            </div>
       </div>
    </div>
</div>
}