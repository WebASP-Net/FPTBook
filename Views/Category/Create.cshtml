@model FPTBook.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="nav-link">Create Category</h1>
<hr />
<div class="row">
    <div class="col-md-15">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">                		    
                    <label asp-for="Cat_Name" class="col-sm-2 control-label">CategoryName:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Cat_Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Cat_Name" class="text-danger"></span> 	                
		        </div>                
                </div> 

            <div class="form-group">                		    
                    <label asp-for="Cat_Des" class="col-sm-2 control-label">Description:  </label> 
                    <div class="col-sm-10">	
                    <input asp-for="Cat_Des" class="form-control" aria-required="true" />
                    <span asp-validation-for="Cat_Des" class="text-danger"></span> 	                
		        </div>                
                </div> 
            <div class="form-group">
                <input type="submit" value="Create" class="w-50 btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}