@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-15">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="col-sm-2 control-label">Email:  </label>
                <div class="col-sm-10">
                <input asp-for="Username" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.Name" class="col-sm-2 control-label">Username:  </label>
                <div class="col-sm-10">
                <input asp-for="Input.Name" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.DOB" class="col-sm-2 control-label">DateOfBirth:  </label>
                <div class="col-sm-10">
                <input asp-for="Input.DOB" class="form-control" disabled />
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="w-50 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}